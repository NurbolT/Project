@model Project.Models.Classroom

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Classroom</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SectionId" class="control-label">SectionName</label>
                <select asp-for="SectionId" class="form-control" asp-items="ViewBag.SectionId"></select>
                @Html.ValidationMessageFor(model => model.SectionId, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label asp-for="ClassNumber" class="control-label"></label>
                <input asp-for="ClassNumber" class="form-control" />
                <span asp-validation-for="ClassNumber" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
